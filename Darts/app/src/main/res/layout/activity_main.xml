<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.darts.MainActivity">


    <TextView
        android:id="@+id/textone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Darts alkalmazás"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Első játékos"
        android:textSize="24dp"
        android:layout_below="@+id/textone"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/nametwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Második játékos"
        android:textSize="24dp"
        android:layout_below="@+id/nameone"
        android:inputType="textPersonName"/>
    <EditText
        android:id="@+id/namethree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Harmadik játékos"
        android:textSize="24dp"
        android:layout_below="@+id/nametwo"
        android:inputType="textPersonName"/>
    <Button
        android:id="@+id/btnInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Mentés és játék"
        android:layout_below="@+id/namethree"
        android:layout_marginTop="40dp" />


</RelativeLayout>

